RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ /passenger_wsgi.py/$1 [QSA,L]

# Serve static files
<IfModule mod_alias.c>
    Alias /static /home/username/public_html/backend/staticfiles
    Alias /media /home/username/public_html/backend/media
</IfModule>

<Directory /home/username/public_html/backend/staticfiles>
    Require all granted
</Directory>

<Directory /home/username/public_html/backend/media>
    Require all granted
</Directory>
